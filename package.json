{
  "name": "rekit",
  "version": "2.0.0-beta.3",
  "description": "Toolkit for building scalable web applications with React, Redux and React-router.",
  "bin": {
    "rekit": "./bin/rekit.js"
  },
  "keywords": [
    "rekit",
    "react",
    "redux",
    "react-router"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/supnate/rekit.git"
  },
  "scripts": {
    "start": "node ./tools/server.js",
    "build": "node ./tools/build.js",
    "test": "node ./tools/run_test.js",
    "test:plugin": "node ./tests/sanity/plugin.js",
    "test:rekit": "node ./tests/sanity/rekit.js",
    "test:npm": "node ./tests/npm_test.js",
    "codecov": "codecov",
    "docs:prepare": "gitbook install",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:build": "gitbook build",
    "docs:publish": "npm run docs:prepare && rm -rf _book && gitbook build"
  },
  "rekit": {
    "version": "2.0.0",
    "devPort": 6075,
    "portalPort": 6076,
    "buildPort": 6077,
    "plugins": [],
    "css": "less"
  },
  "babel": {
      "presets": [
          "es2015",
          "react",
          "babel-preset-stage-0"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "syntax-dynamic-import",
      "lodash",
      [
        "module-resolver",
        {
          "alias": {
            "src": "./src"
          }
        }
      ]
    ],
    "env": {
      "dev": {
        "plugins": []
      },
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "index.js",
      "src/**/*.js",
      "tools/lib/*.js"
    ],
    "exclude": [
      "tools/**/templates",
      ".tmp"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "sourceMap": false,
    "instrument": true
  },
  "dependencies": {
    "argparse": "^1.0.7",
    "body-parser": "^1.16.0",
    "lodash": "^4.17.4",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "colors": "^1.1.2",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "diff": "^3.2.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "express": "^4.14.1",
    "express-history-api-fallback": "^2.1.0",
    "file-loader": "^0.10.0",
    "gitbook-cli": "^2.3.0",
    "global": "^4.3.1",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.10.0",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "lodash-webpack-plugin": "^0.11.0",
    "memobind": "^0.5.0",
    "mocha": "^3.0.2",
    "mocha-webpack": "^0.7.0",
    "nock": "^9.0.4",
    "node-sass": "^4.5.0",
    "npm-run": "^4.1.0",
    "nyc": "^10.1.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-mock-store": "^1.2.2",
    "redux-saga": "^0.14.3",
    "redux-thunk": "^2.2.0",
    "rekit-core": "latest",
    "rekit-portal": "latest",
    "reselect": "^2.5.3",
    "sass-loader": "^5.0.0",
    "shelljs": "^0.7.6",
    "sinon": "^1.17.7",
    "socket.io": "^1.7.2",
    "style-loader": "^0.13.1",
    "trash": "^4.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1",
    "webpack-node-externals": "^1.3.3"
  }
}